<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this <%= @user.name %> from being saved:</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @user, local: true) do |f| %>  
  <div class="new_input_box">
    <div class="user_new">
      <%= f.label :名前 %>
      <%= f.text_field :name %>
    </div>
    <div class="user_new">
      <%= f.label :メール %>
      <%= f.email_field :email %>
    </div>
    <div class="user_new">
      <%= f.label :パスワード %>
      <%= f.password_field :password %>
    </div>
    <div class="user_new">
      <%= f.label :パスワード確認 %>
      <%= f.password_field :password_confirmation %>
    </div>
    <div class="user_new">
      <%= f.label :プロフィール画像 %>
      <%= f.file_field :image %>
      <%= f.hidden_field :image_cache %>
    </div>
    <%= f.submit "送信する", class: "btn-square"  %>
  </div>
<% end %>