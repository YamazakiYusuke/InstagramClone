<h2>投稿内容</h2>
<div class="one_box">
  <%= @blog.content %>
  <%= image_tag @blog.image.url if @blog.image.url %>
  <% if logged_in? %>
    <% if current_user.id == @blog.user_id %>
      <%= link_to '編集へ', edit_blog_path(@blog) %> 
    <% end %>
  <% end %>
</div>

<p class="go_to_index_blog"><%= link_to '戻る', blogs_path ,class:"btn-square" %></p>
